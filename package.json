{
  "name": "lonely-chat",
  "scripts": {
    "dev:hot": "dotenv -e .env -- bun run --hot src/index.ts",
    "dev": "dotenv -e .env -- bun run src/index.ts",
    "auth": "dotenv -e .env -- bun run auth/index.tsx",
    "type-check": "tsc --noEmit",
    "lint": "npx ultracite lint",
    "format": "npx ultracite format",
    "playground": "bun run scripts/playground.ts",
    "build:main": "tsdown main/src/index.ts -d main/dist",
    "build:auth": "tsdown auth/src/index.tsx -d auth/dist",
    "build": "bun run build:main && bun run build:auth",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "docker:shell": "docker compose exec twitch-bot sh"
  },
  "dependencies": {
    "@openrouter/ai-sdk-provider": "^1.0.0-beta.2",
    "@t3-oss/env-core": "^0.13.8",
    "@twurple/api": "^7.3.0",
    "@twurple/auth": "^7.3.0",
    "@twurple/chat": "^7.3.0",
    "@twurple/eventsub-ws": "^7.3.0",
    "ai": "5.0.0-beta.25",
    "arctic": "^3.7.0",
    "hono": "^4.8.5",
    "open": "^10.2.0",
    "p-queue": "^8.1.0",
    "pino": "^9.7.0",
    "tseep": "^1.3.1",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "localtunnel": "^2.0.2",
    "pino-pretty": "^13.0.0",
    "tsdown": "^0.13.0",
    "@biomejs/biome": "2.1.2",
    "@types/bun": "latest",
    "@types/localtunnel": "^2.0.4",
    "dotenv-cli": "^9.0.0",
    "typescript": "^5.8.3",
    "ultracite": "5.0.49"
  },
  "packageManager": "bun@1.2.19"
}
